        <% function clicked(){ %>
            <% console.log("hello world") %> 
            <% } %> 
            <button onClick = "clicked()"  >Hello</button>
        <h3>What our customers are saying</h3>
        <div class="my-slider">
            <img id="reviewers-img" src=<%=reviews[reviewCounter].img %> alt="customer-picture">
            <p id="reviewers-comment">
                <%= reviews[reviewCounter].img %>
            </p>
            <p id="reviewers-name">
                <%= reviews[reviewCounter].name %>
            </p>
            <button id="prev-btn" onClick= <%= prevImg() %>>bakc</button>
            <button id="next-btn" onClick=nextImg()>></button>
