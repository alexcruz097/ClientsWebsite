    <section id="contact-section">
        <div id="contact-info">
            <h3>Need to get in touch?</h3>
            <p>Need a quote or have a question? Please feel free to contact us and we will get right back as soon as
                possible.</p>
            <p><i class="fas fa-mobile-alt"></i> 747-255-1090</p>
            <p><i class="fas fa-at"></i> alex@ggmail.com</p>
            <p><i class="fas fa-map-marker-alt"></i> Los Angeles,CA</p>
        </div>
        <form action="/">
            <h1>Contact Us</h1>
            <input type="text" name="name" placeholder="Name">
            <input type="email" name="email" placeholder="Your Email">
            <textarea name="message" placeholder="Question"></textarea>

            <button type="submit">SEND</button>
        </form>
    </section>

    <%- include('partials/footer.ejs') %>